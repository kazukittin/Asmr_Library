{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "C:/**"
        },
        {
          "path": "D:/**"
        },
        {
          "path": "E:/**"
        },
        {
          "path": "F:/**"
        },
        {
          "path": "G:/**"
        }
      ]
    }
  ]
}